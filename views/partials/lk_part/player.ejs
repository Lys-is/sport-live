<div class="team__wrapper">
    <h1 class="lk_wrapper__title">Игроки</h1>
    <span class="nav_link" data-href="player/post__create">Создать игрока</span>
    <table class="team__table">
    <% if (players.length > 0) { %>
        <tr>
            <th>ФИО</th>
            <th>Дата рождения</th>
            <th>Команда</th>
            <th>Действия</th>
        </tr>
        <% for (let i = 0; i < players.length; i++) { %>
            <tr class="team__item">
                
                    <td class="team__item__title">
                        <%= players[i].fio %>
                    </td>
                    <td class="team__item__date">
                        <%= players[i].date %>
                    </td>
                    <td class="team__item__creator">
                        <%= players[i].team.name %>
                    </td>
                    <td class="team__item__edit">
                        <span class="nav_link" data-href="player/edit/?id=<%= players[i]._id %>" class="team__item__edit__link">Изменить</span>
                    </td>
            </tr>
        
        <% } %>
    </table>
    <%} else { %>
        <h1 class="lk_wrapper__title">Нет игроков
        
        </h1>
    <% } %>
    <script>
        
    </script>
</div>