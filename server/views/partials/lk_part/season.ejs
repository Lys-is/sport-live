
<div class="team__wrapper">
    <div class="table_container">
        <div class="table_header">
            <p class="page_title">Сезоны</p>
            <div class="filler"></div>
            <input type="button" value="Сбросить фильтры" class="table_button" id="clear_filters">
            <input type="button" value="Добавить сезон" class="table_button nav_link" data-href="season/get__create">
            <div class="filler"></div>
            <input type="button" value="Активные" class="table_status table_button_radio_active table_radio_active" data-name="active">
            <input type="button" value="Архивные" class="table_status table_button_radio_archive" data-name="deleted">
        </div>
    <table class="commands_table">
        <tr id="first-row">
            <td>№</td>
            <td>Название</td>
            <td>Старт сезона</td>
            <td>Окончание сезона</td>
            <td>Действия</td>
            <td></td>
        </tr>
        <tr class="filter">
            <td></td>
            <td><input type="text" class="table_input_text" name="name"></td>
            <td><input type="text" class="table_input_text" name="start"></td>
            <td><input type="text" class="table_input_text" name="end"></td>
            <td></td>
            <td></td>

        </tr>
     <% if (seasons.length > 0) { %>

    <% for (let i = 0; i < seasons.length; i++) {%>
        <tr>
            <td><%= i + 1%></td>
            <td><%= seasons[i].name %></td>
            <td><%= formatDatePretty(seasons[i].start) %></td>
            <td><%= formatDatePretty(seasons[i].end) %></td>
            <td>
                <% if (seasons[i].status_doc === 'active') { %>
                <span class="table_links table_links_compos nav_link"  data-href="season/get__edit/?id=<%= seasons[i]._id %>">Изменить</span>
                <span class="table_links table_links_del" data-id="<%= seasons[i]._id %>" data-model="Season">В архив</span>
                <% } else { %>
                <span class="table_links table_links_del" data-id="<%= seasons[i]._id %>" data-model="Season">Из архива</span>
                <% } %>
            </td>
            <td><a target="_blank" href="/fans_members/<%= league_href %>?page=judge/id/<%= seasons[i]._id %>">link</a></td>
        </tr>

    
    <% } %>
</table>
<%} else { %>
</table>
    <h2 class="lk_wrapper__title">Нет судей</h2>
<% } %>
<%- include('pagination.ejs') %>

</div>

