    <div class="cool_body_content wbt">
        <p class="page_title nm">Добавить существующего представителя</p>
    </div>
    <div class="cool_body_content">
        <form id="team_representative__form">
            <div class="form-group">
                <input type="hidden" name="teamId" value="<%= team._id %>">
                <input type="text" list="representative" name="representativeId">
                <datalist id="representative">
                    <% for (let i = 0; i < representativesAll.length; i++) { %>
                        <option value="<%= representativesAll[i].fio %>" data-value="<%= representativesAll[i]._id %>"></option>
                    <% } %>
                </datalist>
                <div class="filler"></div>
                <p class="nm"></p>
                <div class="filler"></div>
                <input type="submit" value="Добавить" class="button green_button double_form">
            </div>
        </form>
    </div>
