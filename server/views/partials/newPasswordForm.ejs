
<div class="login_container">
    <div class="login_content">
        <div class="login_header">
            <p class="page_title">Восстановление пароля</p>
        </div>
        <form id="newPasswordForm">
            <div class="login_body">
                <div class="form-group">
                    <input type="password" placeholder="Пароль" class="text_form text" id="reg_password" name="password" required>
                </div>
                <div class="form-group">
                    <input type="password" placeholder="Подтвердите пароль" class="text_form text" id="reg_password" name="password_confirm" required>
                </div>
                <div class="form-group">
                    <input type="submit" value="Создать новый пароль" class="button green_button">
                </div>
            </div>
            <div class="login_footer">
                <a href="/login" class="reg_link">Вход</a>
            </div>
        </form>
    </div>
</div>