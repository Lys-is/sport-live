<%- include('score_styles/' + style_panel + '/visualizer.ejs') %>

<style>
    <%=css%>
    body{
        overflow: hidden;
    }

    img{
        aspect-ratio: 1/1 !important;
        object-fit: cover !important;
    }

    .mid img.home-logo, .mid img.away-logo {
        width: 200px !important;
        height: 200px !important;
        max-width: 200px !important;
    }


    .home-anim {
        animation-name: home-anim;
        animation-duration: 0.5s;
        animation-timing-function: ease;
        animation-delay: 0.1s;
        animation-iteration-count: 1;
        animation-direction: normal;
        animation-fill-mode: forwards;
        visibility: hidden;
    }
    @keyframes home-anim {
            
        0% {
            transform:translateX(-100%);
            transform-origin:bottom;
            visibility: hidden;

        }
        100% {
            transform:translateX(0%);
            transform-origin:bottom;
            visibility: visible;

        }
    }

    .away-anim {
        animation-name: away-anim;
        animation-duration: 0.5s;
        animation-timing-function: ease;
        animation-delay: 0.1s;
        animation-iteration-count: 1;
        animation-direction: normal;
        animation-fill-mode: forwards;
        visibility: hidden;
    }
    @keyframes away-anim {
            
        0% {
            transform:translateX(100%);
            transform-origin:bottom;
            visibility: hidden;

        }
        100% {
            transform:translateX(0%);
            transform-origin:bottom;
            visibility: visible;

        }
    }

    .butt-anim-big {
    animation-name: shutter-in-top-2;
    animation-duration: 0.5s;
    animation-timing-function: linear;
    animation-delay: 0.3s;
    animation-iteration-count: 1;
    animation-direction: normal;
    animation-fill-mode: forwards;
    visibility: hidden;
}
@keyframes shutter-in-top-2 {
        
    0% {
        transform:rotateX(-100deg);
        transform-origin:bottom;
        opacity:0;
        visibility: hidden;
    }
    100% {
        transform:rotateX(0deg);
        transform-origin:bottom;
        opacity:1;
        visibility: visible;
    }
}

.fade-anim {
    animation-name: fade-anim;
    animation-duration: 0.5s;
    animation-timing-function: ease;
    animation-delay: 0s;
    animation-iteration-count: 1;
    animation-direction: normal;
    animation-fill-mode: forwards;
}
@keyframes fade-anim {
        
    0% {
        opacity:0;
        max-height: 0;
    }
    100% {
        opacity:1;
        max-height: 35px;
    }
}

.matchid-anim {
    animation-name: matchid-anim;
    animation-duration: 0.7s;
    animation-timing-function: cubic-bezier(0, 0.51, 0, 1);
    animation-delay: 0s;
    animation-iteration-count: 1;
    animation-direction: normal;
    animation-fill-mode: forwards;
}

@keyframes matchid-anim {
    0% {
    opacity: 0;
    transform: translateY(-500px);
}
    100% {
        transform: translateY(0);
        opacity: 1;
    }
}
#matchid {
    animation: none !important;
    transform: none !important;
}
#middle {
    position: relative;
}
.roster-teamate {
    background: #91919175;
}
#main {
    margin-top: unset !important;
    padding-top: 50px !important;
}
    .var-stadium {
        display: none;
    }
img[src=""] {
    display: none;
}
</style>
