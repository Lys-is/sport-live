                    <p class="first">Матч</p>
                </div>
                <div class="h-group">
                    <select name="match" id="match" class="text-form full-form">
                    <% matches.forEach(match => {
                    %>
                        <option value="<%= match._id %>"><%= match.team_1.name %> - <%= match.team_2.name %></option>
                    <%
                    }); %>
                    </select>
                </div>
                <div class="h-group">
                    <input type="button" value="Обновить список" class="full-form" name="match-button-refresh">
                    <input type="button" value="Применить выделенный" class="full-form" name="match-button-accept">
                </div>
            </div>
            

            <div class="block">
                <div class="h-group centered">
                    <p class="first">Вариация табло</p>
                </div>
                <div class="h-group wrap half-form-container tablo_variation" >
                    <input type="button" value="Малое" data-type="little" class="selected" name="small-vis">
                    <input type="button" value="Большое" class="" data-type="big" name="big-vis">
                    <input type="button" value="Матч" class="" data-type="mid" name="match-vis">
                    <input type="button" value="Сборная 1" class="" data-type="home-roster" name="group-vis">
                    <input type="button" value="Сборная 2" class="" data-type="away-roster" name="mog-vis">
                    <input type="button" value="Пенальти" class="" data-type="pen" name="pen-vis">
                    <input type="button" value="Выкл" class="" data-type="off" name="off-vis">
                </div>
                <div class="h-group">
                        <label for="panel-style" class="inline-form-label small-text nowrap">Стиль табло</label>
                        <select name="panel-style" id="panel-style" class="text-form full-form">
                            <option value="style_1">style1</option>
                            <option value="style_2">style2</option>
                            <option value="style_3">style3</option>
                            <option value="style_4">style4</option>
                            <option value="style_5">style5</option>
                            <option value="style_6">style6</option>
                            <option value="style_7">style7</option>
                            <% styles.forEach(style => { %>
                                <option value="<%= style._id %>__id"><%= style.name %></option>
                            <% })
                            %>
                        </select>
                </div>
            </div>
           
            <div class="block">
                <div class="h-group center">
                    <p class="first">Сценарий</p>
                </div>
                <div class="h-group">
                    <select name="scenarios" id="scenarios" class="text-form full-form">
                        <option value="1">Начало матча</option>
                        <option value="2">1 тайм</option>
                        <option value="3">Перерыв</option>
                        <option value="4">2 тайм</option>
                        <option value="5">Конец матча</option>
                    </select>
                </div>
            </div>
            

            <div class="block">
                <div class="h-group center">
                    <p class="first">Сброс и перезагрузка</p>
                </div>
                <div class="h-group">
                    <input type="button" value="Сбросить все" class="full-form red" name="reset-all">
                    <input type="button" value="Перезагрузить табло" class="full-form yellow" name="refresh-all">
